<!DOCTYPE html>
<html>
<head>
  <title>MySite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Muli">
  <link rel="stylesheet" type="text/css"
      href="https://fonts.googleapis.com/css?family=Puritan">
</head>
<body>

  <div id="nav">
    <div id="nav-copy"></div>
    <div class="under" id="nav-portfolio"> Portfolio <div class="under-line"></div></div>
    <div class="under" id="nav-about"> About Me <div class="under-line"></div></div>
    <div id="nav-logo"><img src="logo2.png"></div>
  </div>

  <div id="navbar">
  </div>

<%= yield %>

</body>
</html>

<script>

  //jQuery variable definition
  var $logo = $('#nav-logo');
  var $nav = $('#nav');
  var $navc = $('#nav-copy');
  var $under = $('.under');
  var isHovered = $('#graphic').is(":hover");

  //animating the navigation bar when scrolling off the top of the document
  $(document).scroll(function() {
    $logo.animate({height: $(this).scrollTop() > 0? "40px":"60px"}, {duration: 100, queue: false, easing: "linear"});
    $nav.animate({height: $(this).scrollTop() > 0? "60px":"100px"}, {duration: 100, queue: false, easing: "linear"});
    $navc.animate({height: $(this).scrollTop() > 0? "60px":"100px"}, {duration: 100, queue: false, easing: "linear"});
    $under.animate({height: $(this).scrollTop() > 0? "60px":"100px"}, {duration: 100, queue: false, easing: "linear"});
    $under.animate({top: $(this).scrollTop() > 0? "-20px":"0px"}, {duration: 100, queue: false, easing: "linear"});
    $navc.animate({opacity: $(this).scrollTop() > 0? "1":"0"}, {duration: 0, queue: false, easing: "linear"});
  });

  //animating the graphic design container's elements when scrolling past it
  $(function(){
    $(document).scroll(function(){
        if($(this).scrollTop() >= $('#graphic').offset().top - 300) {
            $("#graphic").css("width","450px");
            $("#graphic").css("margin-left","680px");
            $("#graphic-text").css("margin-top","40px");
            $("#graphic-text").css("margin-left","250px");
            $("#g-sub-text").css("display","block");
            $("#g-sub-text").css("margin-left","280px");
            $("#sushi-wrap").css("margin-left","-40px");
            $("#chop").css("animation","up3 3s");
        } else {
            $("#graphic").css("width","380px");
            $("#graphic").css("margin-left","750px");
            $("#graphic-text").css("margin-top","60px");
            $("#graphic-text").css("margin-left","180px");
            $("#g-sub-text").css("display","none");
            $("#g-sub-text").css("margin-left","280px");
            $("#sushi-wrap").css("margin-left","0px");
            $("#chop").css("animation","none");
        }
    });
  });

</script>
